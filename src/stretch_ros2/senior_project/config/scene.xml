<mujoco model="stretch scene">
  <include file="stretch.xml"/>

  <statistic center="0 0 .75" extent="1.2" meansize="0.05"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-120" elevation="-20"/>
  </visual>

  <asset>
    <material name="floor" rgba=".15 .15 .15 1" reflectance="0.1"/>
    <texture type="skybox" builtin="gradient" rgb1="0.44 0.80 1.00" rgb2="1 1 1" width="512" height="3072"/>
  </asset>

  <worldbody>
    <light pos="0 0 5" dir="0 0 -1" directional="true"/>
    
    <!-- 10x10m floor -->
    <geom name="floor" size="5 5 0.05" type="plane" material="floor"/>

    <!-- Border walls (10x10m) -->
    <geom name="wall_n" type="box" pos="0 5 0.5" size="5 0.1 0.5" rgba="0.2 0.2 0.2 1"/>
    <geom name="wall_s" type="box" pos="0 -5 0.5" size="5 0.1 0.5" rgba="0.2 0.2 0.2 1"/>
    <geom name="wall_e" type="box" pos="5 0 0.5" size="0.1 5 0.5" rgba="0.2 0.2 0.2 1"/>
    <geom name="wall_w" type="box" pos="-5 0 0.5" size="0.1 5 0.5" rgba="0.2 0.2 0.2 1"/>

    <!-- Obstacles -->
    <geom name="obs_box_1" type="box" pos="2 2 0.4" size="0.5 0.5 0.4" rgba="0.55 0.35 0.20 1"/>
    <geom name="obs_box_2" type="box" pos="-3 1 0.3" size="0.4 0.8 0.3" rgba="0.55 0.35 0.20 1"/>
    <geom name="obs_cyl_1" type="cylinder" pos="-1 -2 0.4" size="0.4 0.4" rgba="0.30 0.45 0.65 1"/>
    <geom name="obs_cyl_2" type="cylinder" pos="3 -3 0.5" size="0.3 0.5" rgba="0.30 0.45 0.65 1"/>

    <!-- Humans -->
    <body name="human_1" pos="-2 3 0">
      <geom name="h1_torso" type="capsule" fromto="0 0 0.2 0 0 1.1" size="0.16" rgba="0.85 0.55 0.55 1"/>
      <geom name="h1_head" type="sphere" pos="0 0 1.3" size="0.14" rgba="0.95 0.80 0.65 1"/>
    </body>
    <body name="human_2" pos="3 2 0">
      <geom name="h2_torso" type="capsule" fromto="0 0 0.2 0 0 1.1" size="0.16" rgba="0.55 0.75 0.55 1"/>
      <geom name="h2_head" type="sphere" pos="0 0 1.3" size="0.14" rgba="0.95 0.80 0.65 1"/>
    </body>

  </worldbody>
</mujoco>