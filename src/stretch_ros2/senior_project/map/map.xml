<mujoco model="explore_arena">
  <compiler angle="degree" coordinate="local" inertiafromgeom="true"/>
  <option timestep="0.002" gravity="0 0 -9.81" iterations="50" solver="Newton"/>
  <size njmax="2000" nconmax="400"/>

  <default>
    <geom friction="1 0.5 0.01" density="600" rgba="0.7 0.7 0.7 1"/>
    <joint damping="1" armature="0.01"/>
  </default>

  <asset>
    <texture name="texgrid" type="2d" builtin="checker" rgb1="0.20 0.20 0.20" rgb2="0.25 0.25 0.25" width="512" height="512"/>
    <material name="matfloor" texture="texgrid" texrepeat="8 8" reflectance="0.02" rgba="1 1 1 1"/>
  </asset>

  <worldbody>
    <!-- Big floor (30m x 30m) -->
    <geom name="floor" type="plane" size="15 15 0.1" material="matfloor" rgba="1 1 1 1"/>

    <!-- Border walls: thickness 0.2m, height 1.5m -->
    <!-- North wall (+y) -->
    <geom name="wall_n" type="box" pos="0 15 0.75" size="15 0.2 0.75" rgba="0.15 0.15 0.15 1" contype="1" conaffinity="1"/>
    <!-- South wall (-y) -->
    <geom name="wall_s" type="box" pos="0 -15 0.75" size="15 0.2 0.75" rgba="0.15 0.15 0.15 1" contype="1" conaffinity="1"/>
    <!-- East wall (+x) -->
    <geom name="wall_e" type="box" pos="15 0 0.75" size="0.2 15 0.75" rgba="0.15 0.15 0.15 1" contype="1" conaffinity="1"/>
    <!-- West wall (-x) -->
    <geom name="wall_w" type="box" pos="-15 0 0.75" size="0.2 15 0.75" rgba="0.15 0.15 0.15 1" contype="1" conaffinity="1"/>

    <!-- Obstacles: mix of boxes and cylinders -->
    <geom name="obs_box_1" type="box" pos="6 6 0.5" size="1.2 0.8 0.5" rgba="0.55 0.35 0.20 1" contype="1" conaffinity="1"/>
    <geom name="obs_box_2" type="box" pos="-7 4 0.4" size="0.9 1.5 0.4" rgba="0.55 0.35 0.20 1" contype="1" conaffinity="1"/>
    <geom name="obs_box_3" type="box" pos="2 -9 0.6" size="1.8 0.6 0.6" rgba="0.55 0.35 0.20 1" contype="1" conaffinity="1"/>

    <geom name="obs_cyl_1" type="cylinder" pos="-4 -6 0.6" size="0.7 0.6" rgba="0.30 0.45 0.65 1" contype="1" conaffinity="1"/>
    <geom name="obs_cyl_2" type="cylinder" pos="9 -3 0.8" size="0.6 0.8" rgba="0.30 0.45 0.65 1" contype="1" conaffinity="1"/>
    <geom name="obs_cyl_3" type="cylinder" pos="-10 -9 0.7" size="0.8 0.7" rgba="0.30 0.45 0.65 1" contype="1" conaffinity="1"/>

    <!-- A few "human-like" figures (simple ragdoll-ish capsules).
         These are passive bodies with a free joint so they can be pushed.
         If you want them fixed in place, remove the <freejoint/> line. -->

    <!-- Human 1 -->
    <body name="human_1" pos="-6 10 1.0">
      <freejoint/>
      <!-- torso -->
      <geom name="h1_torso" type="capsule" fromto="0 0 0.2  0 0 1.1" size="0.16" rgba="0.85 0.55 0.55 1"/>
      <!-- head -->
      <geom name="h1_head" type="sphere" pos="0 0 1.3" size="0.14" rgba="0.95 0.80 0.65 1"/>
      <!-- left leg -->
      <geom name="h1_lleg" type="capsule" fromto="-0.12 0 0.15  -0.12 0 -0.8" size="0.08" rgba="0.85 0.55 0.55 1"/>
      <!-- right leg -->
      <geom name="h1_rleg" type="capsule" fromto="0.12 0 0.15  0.12 0 -0.8" size="0.08" rgba="0.85 0.55 0.55 1"/>
      <!-- left arm -->
      <geom name="h1_larm" type="capsule" fromto="-0.18 0 0.95  -0.65 0 0.75" size="0.06" rgba="0.85 0.55 0.55 1"/>
      <!-- right arm -->
      <geom name="h1_rarm" type="capsule" fromto="0.18 0 0.95  0.65 0 0.75" size="0.06" rgba="0.85 0.55 0.55 1"/>
    </body>

    <!-- Human 2 -->
    <body name="human_2" pos="10 9 1.0">
      <freejoint/>
      <geom name="h2_torso" type="capsule" fromto="0 0 0.2  0 0 1.1" size="0.16" rgba="0.55 0.75 0.55 1"/>
      <geom name="h2_head" type="sphere" pos="0 0 1.3" size="0.14" rgba="0.95 0.80 0.65 1"/>
      <geom name="h2_lleg" type="capsule" fromto="-0.12 0 0.15  -0.12 0 -0.8" size="0.08" rgba="0.55 0.75 0.55 1"/>
      <geom name="h2_rleg" type="capsule" fromto="0.12 0 0.15  0.12 0 -0.8" size="0.08" rgba="0.55 0.75 0.55 1"/>
      <geom name="h2_larm" type="capsule" fromto="-0.18 0 0.95  -0.65 0 0.75" size="0.06" rgba="0.55 0.75 0.55 1"/>
      <geom name="h2_rarm" type="capsule" fromto="0.18 0 0.95  0.65 0 0.75" size="0.06" rgba="0.55 0.75 0.55 1"/>
    </body>

    <!-- Human 3 -->
    <body name="human_3" pos="0 -2 1.0">
      <freejoint/>
      <geom name="h3_torso" type="capsule" fromto="0 0 0.2  0 0 1.1" size="0.16" rgba="0.55 0.60 0.85 1"/>
      <geom name="h3_head" type="sphere" pos="0 0 1.3" size="0.14" rgba="0.95 0.80 0.65 1"/>
      <geom name="h3_lleg" type="capsule" fromto="-0.12 0 0.15  -0.12 0 -0.8" size="0.08" rgba="0.55 0.60 0.85 1"/>
      <geom name="h3_rleg" type="capsule" fromto="0.12 0 0.15  0.12 0 -0.8" size="0.08" rgba="0.55 0.60 0.85 1"/>
      <geom name="h3_larm" type="capsule" fromto="-0.18 0 0.95  -0.65 0 0.75" size="0.06" rgba="0.55 0.60 0.85 1"/>
      <geom name="h3_rarm" type="capsule" fromto="0.18 0 0.95  0.65 0 0.75" size="0.06" rgba="0.55 0.60 0.85 1"/>
    </body>

    <!-- Light + camera for viewing -->
    <light name="sun" pos="0 0 10" dir="0 0 -1" diffuse="1 1 1" specular="0.2 0.2 0.2"/>
    <camera name="overview" pos="0 -28 18" euler="35 0 0"/>
  </worldbody>

  <!-- Optional: make contacts a bit “cleaner” -->
  <contact>
    <exclude body1="human_1" body2="human_2"/>
    <exclude body1="human_1" body2="human_3"/>
    <exclude body1="human_2" body2="human_3"/>
  </contact>
</mujoco>
